
@{

    ViewBag.Title = "Home Page";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<head>
    <link href="~/Content/font-awesome.min.css" rel="stylesheet" />
    <link href="~/Content/css/Site.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-slider.min.css" rel="stylesheet" />
    <link href="~/Content/css/RangeSlidar.css" rel="stylesheet" />
    <link href="~/Content/css/LutronLightFloor.css" rel="stylesheet" />
    <link href="~/Content/css/bootstrap-toggle.min.css" rel="stylesheet" />
    <link href="~/Content/css/Loader.css" rel="stylesheet" />
</head>
<html>


<body>
    <div class="row">
        <div class="panel panel-default">
            <div class="panel-heading"><h4>BacNetLutron</h4></div>
            <div class="panel-body">
                <div class="col-sm-8">
                    <form>
                        <div class="form-group row">
                            <label for="colFormLabelSm" class="col-sm-3 col-form-label col-form-label-sm">Device</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="exampleFormControlSelect1">
                                    <option>Conference 4628A 1761035</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg">Lighting Scene</label>
                            <div class="col-sm-9">
                                <select class="form-control" id="ddllightScene">
                                    <option selected>--Select Scene--</option>
                                    <option value="1">Off</option>
                                    <option value="2">Full On</option>
                                    <option value="3">High</option>
                                    <option value="4">Medium</option>
                                    <option value="5">Low</option>
                                    <option value="6">High 1</option>
                                    <option value="7">VTC</option>
                                    <option value="8">Low 1</option>
                                    <option value="9">Unknown</option>
                                </select>
                            </div>
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabel" class="col-sm-3 col-form-label">Lighting Level</label>
                            @*<div class="col-sm-6 range-slider">*@
                            <input class="range-slider range-slider__range" type="range" id="floorSlidar1" value="0" min="0" max="100" width:"0px;">
                            <span class="range-slider__value">0</span>
                            @*</div>*@
                        </div>
                        <div class="form-group row">
                            <label for="colFormLabelLg" class="col-sm-3 col-form-label col-form-label-lg">Lighting State</label>
                            <div class="col-sm-9">
                                <input type="checkbox" checked data-toggle="toggle">
                            </div>
                        </div>

                    </form>
                </div>
                <div class="col-sm-4">
                    <i class="fa fa-10x fa-lightbulb-o" id="lightLevel" aria-hidden="false"></i>
                </div>
                <div class="col-sm-4">
                    <button type="button" class="btn-sm btnsearchstyle" id="btnRefresh">
                        <i class="fa fa-refresh" aria-hidden="true">&nbsp; Refresh</i>
                    </button>
                </div>
            </div>
        </div>
    </div>
    <div class="loading displaynone" id="loader"></div>
</body>

</html>


<script src="~/Scripts/jquery-1.10.2.min.js"></script>
<script src="~/Scripts/moment.js"></script>
<script src="~/Scripts/bootstrap.min.js"></script>
<script src="~/Scripts/jquery-confirm.js"></script>
<script src="~/Scripts/bootstrap-toggle.min.js"></script>
<script src="~/Content/Script/Pages/BacNet.js"></script>

